{
  "steps": {
    ":original": {
      "robot": "/upload/handle"
    },
    "metawrite": {
      "use": [":original"],
      "robot": "/meta/write",
      "result": true,
      "data_to_write": {"copyright":"Copyright eSolia Inc."}
    },
    "filtered": {
      "use": "metawrite",
      "robot": "/file/filter",
      "accepts": [
        [
          "${file.mime}",
          "regex",
          "image"
        ]
      ],
      "error_on_decline": true
    },
    "viruscheck": {
      "use": "filtered",
      "robot": "/file/virusscan",
      "error_on_decline": true
    },
    "resize_image_150": {
      "use": "viruscheck",
      "robot": "/image/resize",
      "resize_strategy": "fit",
      "width": 150,
      "zoom": false,
      "imagemagick_stack": "v2.0.3",
      "result": false
    },
    "resize_image_800": {
      "use": "viruscheck",
      "robot": "/image/resize",
      "resize_strategy": "fit",
      "width": 800,
      "zoom": false,
      "imagemagick_stack": "v2.0.3",
      "result": false
    },
    "compress_image": {
      "use": [
        "resize_image_800",
        "resize_image_150"
      ],
      "robot": "/image/optimize",
      "progressive": true
    },
    "export": {
      "use": [
        ":original",
        "resize_image_800",
        "resize_image_150",
        "compress_image"
      ],
      "robot": "/s3/store",
      "credentials": "eSolia_AWS_Master_esolia-doc-assets",
      "url_prefix": "https://esolia-doc-assets.s3.amazonaws.com/",
      "path": "prdn/${fields.year}/eSolia-${file.url_basename}-${file.original_id}-w${file.meta.width}px.${file.ext}"
    }
  },
  "notify_url": "https://x.hookdoo.com/hook/5434145c-ee2e-11e8-8fb7-7b30c9efcee5?account_id=f30c4420eaf311e8adf45d9a4689d142"
}
